<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/selector"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:stateListAnimator="@anim/layout_animation_new"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/_8sdp"
    card_view:cardElevation="@dimen/_3sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/LogoCompany"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/ic_dell"
            tools:ignore="MissingConstraints"
            android:src="@drawable/defult_user_photo" />

        <TextView
            android:id="@+id/EmployeePhoto"
            android:layout_width="@dimen/_97sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginStart="8dp"
            tools:text="Senior UI/U..."
            android:textAlignment="viewStart"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/LogoCompany"
            card_view:layout_constraintStart_toEndOf="@+id/LogoCompany"
            card_view:layout_constraintTop_toTopOf="@+id/LogoCompany"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="@dimen/_97sdp"
            android:layout_height="wrap_content"
            tools:text="Dell corp "
            android:textAlignment="viewStart"
            android:textColor="@color/blue"
            android:textSize="@dimen/_10ssp"
            card_view:layout_constraintEnd_toEndOf="@+id/EmployeePhoto"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/EmployeePhoto"
            card_view:layout_constraintTop_toBottomOf="@+id/EmployeePhoto" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="20dp"
            card_view:layout_constraintEnd_toEndOf="@+id/LogoCompany"
            card_view:layout_constraintHorizontal_bias="0.16"
            card_view:layout_constraintStart_toStartOf="@+id/LogoCompany"
            card_view:layout_constraintTop_toBottomOf="@+id/LogoCompany"
            card_view:srcCompat="@drawable/ic_icon_map_location_arrow"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/location"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="Dubai"
            android:textSize="@dimen/_8ssp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView10"
            card_view:layout_constraintStart_toEndOf="@+id/imageView10"
            card_view:layout_constraintTop_toTopOf="@+id/imageView10" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="5dp"
            card_view:layout_constraintEnd_toEndOf="@+id/imageView10"
            card_view:layout_constraintStart_toStartOf="@+id/imageView10"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView10"
            card_view:srcCompat="@drawable/ic_phone_call"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/accept_phone"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="+962 788 398 373"
            android:textSize="@dimen/_8ssp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView11"
            card_view:layout_constraintStart_toEndOf="@+id/imageView11"
            card_view:layout_constraintTop_toTopOf="@+id/imageView11" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="7dp"
            card_view:layout_constraintEnd_toEndOf="@+id/imageView10"
            card_view:layout_constraintStart_toStartOf="@+id/imageView10"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView11"
            card_view:srcCompat="@drawable/new_applied"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView78"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="Similar jobs pay $11.00 - $17.87"
            android:textSize="@dimen/_8ssp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView4"
            card_view:layout_constraintStart_toEndOf="@+id/imageView4"
            card_view:layout_constraintTop_toTopOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            card_view:layout_constraintEnd_toEndOf="@+id/companyName"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/companyName"
            card_view:layout_constraintTop_toBottomOf="@+id/companyName"
            card_view:srcCompat="@drawable/stars" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_marginTop="4dp"
            card_view:layout_constraintEnd_toEndOf="@+id/imageView4"
            card_view:layout_constraintHorizontal_bias="0.25"
            card_view:layout_constraintStart_toStartOf="@+id/imageView4"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView4"
            card_view:srcCompat="@drawable/ic_email2" />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/_8ssp"
            tools:text="TextView"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView26"
            card_view:layout_constraintStart_toEndOf="@+id/imageView26"
            card_view:layout_constraintTop_toTopOf="@+id/imageView26" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textView66">


            <Button
                android:id="@+id/acceptBtn"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/blue_button"
                android:text="See Employee C.V"
                android:textColor="@color/white" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView42"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_marginStart="16dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/accept_phone"
            card_view:layout_constraintStart_toEndOf="@+id/accept_phone"
            card_view:layout_constraintTop_toTopOf="@+id/accept_phone"
            card_view:srcCompat="@drawable/ic_hat" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Jobs completed : "
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/primary_dark"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView42"
            card_view:layout_constraintStart_toEndOf="@+id/imageView42"
            card_view:layout_constraintTop_toTopOf="@+id/imageView42" />

        <TextView
            android:id="@+id/textView94"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            tools:text="TextView"
            android:textSize="@dimen/_8ssp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView67"
            card_view:layout_constraintStart_toEndOf="@+id/textView67"
            card_view:layout_constraintTop_toTopOf="@+id/textView67" />

        <ImageView
            android:id="@+id/imageView43"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintEnd_toEndOf="@+id/imageView23"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/imageView23"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView23"
            card_view:srcCompat="@drawable/ic_crown" />

        <TextView
            android:id="@+id/textView95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:text="Sparkling employee"
            android:textSize="@dimen/_8ssp"
            android:textColor="#673AB7"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView43"
            card_view:layout_constraintStart_toEndOf="@+id/imageView43"
            card_view:layout_constraintTop_toTopOf="@+id/imageView43" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>