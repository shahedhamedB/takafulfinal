<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <import type="android.content.Context" />

        <variable
            name="model"
            type="com.moub.perday.model.DonationData" />

        <variable
            name="viewModel"
            type="com.moub.perday.ui.donationdetail.DonationDetailViewModel" />


    </data>



    <androidx.cardview.widget.CardView
        android:id="@+id/carViewApplicants22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/EmployeeName22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:text="@{model.phone}"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_image"
            android:layout_width="64dp"
            android:layout_height="130dp"
            loadDonationImage="@{model.image}"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_user"
            tools:ignore="MissingConstraints"
            tools:src="@drawable/defult_user_photo" />

        <TextView
            android:id="@+id/ExperianceApplicants22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_42sdp"
            android:text="@{model.description}"
            android:textColor="@color/blue" />



        <TextView
            android:id="@+id/workTimeEmployee22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_62sdp"
            android:text="@{model.city}" />

    </androidx.cardview.widget.CardView>
</layout>
