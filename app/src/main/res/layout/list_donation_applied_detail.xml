<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <import type="android.content.Context" />

        <variable
            name="model"
            type="com.moub.perday.model.AppliedData" />

        <variable
            name="viewModel"
            type="com.moub.perday.ui.donationapllied.DonationappliedDetailViewModel" />


    </data>



    <androidx.cardview.widget.CardView
        android:id="@+id/carViewApplicants22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        android:orientation="vertical">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_image"
            android:layout_width="64dp"
            android:layout_height="130dp"
            loadDonationImage="@{model.image}"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_user"
            tools:ignore="MissingConstraints"
            tools:src="@drawable/defult_user_photo" />

        <TextView
            android:id="@+id/ExperianceApplicants22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_42sdp"
            android:text="@{model.association}"
            android:textColor="@color/blue" />

        <ImageView
            android:id="@+id/imageView1922"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_65sdp"
            app:srcCompat="@drawable/ic_icon_map_location_arrow"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/workTimeEmployee22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_62sdp"
            android:text="@{model.description}"


            />

        <Button
            android:background="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تبرع"
            android:textColor="@color/white"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/_20sdp"

            android:gravity="center" />

    </androidx.cardview.widget.CardView>
</layout>
