<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.employer.employerStatus.EmployerStatus">


    <Spinner
        android:id="@+id/emplyerStatusSpinner"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:background="@color/gray"
        android:dropDownSelector="@color/blue"

        android:singleLine="true"
        android:theme="@style/MatchSpinnerTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView69"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/emplyerStatusSpinner"
        app:layout_constraintEnd_toEndOf="@+id/emplyerStatusSpinner"
        app:layout_constraintTop_toTopOf="@+id/emplyerStatusSpinner"
        app:srcCompat="@drawable/ic_location_down" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_300sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:text="@string/please_choose_your_company_type"
        android:textColor="@color/White"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextEmployerStatusBtn"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@color/white"
        android:text="Next"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/organizationEmail"
        app:layout_constraintStart_toStartOf="@+id/organizationEmail"
        app:layout_constraintTop_toBottomOf="@+id/organizationEmail" />

    <EditText
        android:id="@+id/organizationEmail"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/gray"

        android:ems="10"
        android:hint="Organization Name"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/_10sdp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        android:textSize="@dimen/_10ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/emplyerStatusSpinner"
        app:layout_constraintStart_toStartOf="@+id/emplyerStatusSpinner"
        app:layout_constraintTop_toBottomOf="@+id/emplyerStatusSpinner" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="34dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nextEmployerStatusBtn"
        app:layout_constraintStart_toStartOf="@+id/nextEmployerStatusBtn"
        app:layout_constraintTop_toBottomOf="@+id/nextEmployerStatusBtn">

        <TextView
            android:id="@+id/textView70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'am not employer , "
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/clickHereBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click HERE"
            android:textColor="#E7B10B" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71000004" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perday"
            android:textColor="#E7B10B"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="188dp" />

        <TextView
            android:id="@+id/textView560"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".work"
            android:layout_gravity="end"
            android:textColor="@color/gray"
            android:textSize="@dimen/_14ssp"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="188dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>