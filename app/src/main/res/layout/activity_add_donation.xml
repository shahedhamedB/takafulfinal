<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="view"
            type="com.moub.perday.ui.adddonation.AddDonationActivity" />
        <variable
            name="model"
            type="com.moub.perday.model.DonationModel" />

        <variable
            name="viewModel"
            type="com.moub.perday.ui.adddonation.AddDonationViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.adddonation.AddDonationActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_25sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView73"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="اضافة تبرع"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_14ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_donation"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:scaleType="fitXY"

                                app:srcCompat="@drawable/ic_upload_employer_logo"
                                tools:ignore="MissingConstraints" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="تحميل صورة"
                                android:textColor="@color/md_red_900"
                                android:textSize="@dimen/_13ssp" />
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"

                            android:background="@drawable/white_bac"
                            android:elevation="@dimen/_1sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent">

                            <EditText
                                android:id="@+id/phoneCompany"
                                android:layout_width="255dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:digits="0123456789"
                                android:ems="10"
                                android:hint="رقم الهاتف"
                                android:inputType="phone"
                                android:maxLength="9"
                                android:padding="@dimen/_10sdp"
                                android:paddingStart="@dimen/_35sdp"
                                android:textColorHint="#AAAAAA"
                                android:textDirection="ltr"

                                android:text="@={model.phone}"

                                app:error="@{viewModel.isPhone()? model.phoneError : null}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView75"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView75"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:text="+962"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_10ssp"
                                app:layout_constraintBottom_toBottomOf="@+id/phoneCompany"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_bac">


                            <com.skydoves.powerspinner.PowerSpinnerView
                                android:id="@+id/spinnerCitys"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:elevation="@dimen/_1sdp"
                                android:gravity="start|center"
                                android:hint="اختر المحافظة"
                                android:padding="@dimen/_2sdp"
                                android:paddingStart="@dimen/_12sdp"


                                app:error="@{viewModel.isCity()? model.cityError : null}"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/_11ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:spinner_arrow_gravity="end"
                                app:spinner_arrow_padding="@dimen/_3sdp"
                                app:spinner_divider_color="@color/gray"
                                app:spinner_divider_show="true"
                                app:spinner_divider_size="0.4dp"
                                app:spinner_item_array="@array/cities"
                                app:spinner_popup_animation="dropdown"
                                app:spinner_popup_background="@color/white"
                                app:spinner_popup_elevation="@dimen/_10sdp"
                                tools:ignore="RtlSymmetry" />




                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/white_bac"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent">

                            <com.skydoves.powerspinner.PowerSpinnerView
                                android:id="@+id/spinnerCategory"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:elevation="@dimen/_1sdp"
                                android:gravity="start|center"
                                android:hint="اختر الصنف"
                                app:error="@{viewModel.isCategory()? model.categoriesError : null}"

                                android:padding="@dimen/_2sdp"
                                android:paddingStart="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/_11ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:spinner_arrow_gravity="end"
                                app:spinner_arrow_padding="@dimen/_3sdp"
                                app:spinner_divider_color="@color/gray"
                                app:spinner_divider_show="true"
                                app:spinner_divider_size="0.4dp"
                                app:spinner_item_array="@array/category"
                                app:spinner_popup_animation="dropdown"
                                app:spinner_popup_background="@color/white"
                                app:spinner_popup_elevation="@dimen/_10sdp"
                                tools:ignore="RtlSymmetry" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <EditText
                            android:id="@+id/dec"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/white_bac"
                            android:baselineAligned="false"
                            android:elevation="@dimen/_1sdp"
                            android:ems="10"
                            android:hint="تفاصيل اخرى "

                            android:text="@={model.description}"

                            app:error="@{viewModel.isDescription()? model.descriptionError : null}"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/donationBtn"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="52dp"
                        android:background="@color/colorAccent"

                        android:textColor="@color/White"
                        android:textSize="@dimen/_25sdp"
                        android:clickable='@{viewModel.isLoading ? false : true}'
                        android:onClick='@{() -> viewModel.update(model, view)}'
                        android:text='@{viewModel.isLoading() ? null : "تبرع"}'
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                        app:layout_constraintHorizontal_bias="0.502"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                    <ProgressBar
                        android:layout_width="59dp"
                        android:layout_height="0dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:elevation="@dimen/_5sdp"

                        android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="@+id/donationBtn"
                        app:layout_constraintHorizontal_bias="0.492"
                        app:layout_constraintStart_toStartOf="@+id/donationBtn"
                        app:layout_constraintTop_toTopOf="@+id/donationBtn" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
